<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="BackgroundColor">#FFF9F9FB</Color>
    <!-- Fast Weiß, leichter Blaustich -->
    <Color x:Key="SidebarColor">#FFF0F1F4</Color>
    <!-- Etwas dunkleres Grau fuer Sidebar -->
    <Color x:Key="ButtonColor">#FFE6E9EF</Color>
    <!-- Leichtes Grau, sehr klar -->
    <Color x:Key="ButtonHoverColor">#FFD0D7E3</Color>
    <!-- Deutlichere Hover-Farbe -->
    <Color x:Key="ButtonPressedColor">#FFB8C3D1</Color>
    <Color x:Key="ButtonForegroundColor">#FF222222</Color>
    <!-- Dunkel fuer Text -->
    <Color x:Key="SidebarTextColor">#FF1A1A1A</Color>
    <!-- Sidebar-Text dunkel -->
    <Color x:Key="AccentColor">#FF1677FF</Color>
    <!-- Akzentfarbe (z. B. fuer Highlights) -->
    <Color x:Key="PanelBackgroundColor">#FFEAEAEA</Color>
    <!-- Akzentfarbe für Panels --> 

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource ButtonColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressedColor}" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}" />
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
</ResourceDictionary>
