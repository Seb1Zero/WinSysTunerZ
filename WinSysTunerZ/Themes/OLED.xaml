<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="BackgroundColor">#FF000000</Color>
    <!-- Echtes Schwarz -->
    <Color x:Key="SidebarColor">#FF121214</Color>
    <!-- Fast Schwarz, aber Sidebar sichtbar -->
    <Color x:Key="ButtonColor">#FF5865F2</Color>
    <!-- Discord Blurple -->
    <Color x:Key="ButtonHoverColor">#FF4752C4</Color>
    <Color x:Key="ButtonPressedColor">#FF404EED</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFFFF</Color>
    <Color x:Key="SidebarTextColor">#FFD8D8D8</Color>
    <Color x:Key="AccentColor">#FF23A559</Color>
    <Color x:Key="PanelBackgroundColor">#FF181A1B</Color>
    <!-- Akzentfarbe fÃ¼r Panels -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource ButtonColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressedColor}" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}" />
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
</ResourceDictionary>
