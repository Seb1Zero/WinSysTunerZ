<Page x:Class="WinSysTunerZ.HardwarePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HardwarePage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Hardware Overview"
                   Grid.Row="0"
                   FontWeight="Bold"
                   Foreground="Blue"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- Hardware List -->
        <ListBox x:Name="HardwareList"
                 Grid.Row="1"
                 Height="400"
                 HorizontalAlignment="Stretch"/>
    </Grid>
</Page>