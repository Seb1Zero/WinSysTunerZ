<Page x:Class="WinSysTunerZ.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:WinSysTunerZ.ViewModels"
      Title="SettingsPage">

    <Page.DataContext>
        <vm:SettingsPageViewModel />
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="0" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="55"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="Auto" MinHeight="131.94"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto" MinHeight="170"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Text="Settings"
                   Grid.Row="0"
                   FontWeight="Bold"
                   Foreground="Blue"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,18"
                   Width="108"/>

        <!-- Sprache Auswahl -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,33,0,31"
                    Width="250">
            <TextBlock Text="Sprache"
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="Aqua"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <ComboBox Width="200"
                      Style="{StaticResource RoundedComboBoxStyle}"
                      HorizontalAlignment="Center"
                      SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                      DisplayMemberPath="Display"
                      ItemsSource="{Binding Languages}"
                      Margin="0,0,0,6"
                      SelectionChanged="LanguageComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Theme Auswahl -->
        <StackPanel Grid.Row="4"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20"
                    Width="250">
            <TextBlock Text="Theme"
                       FontWeight="Bold"
                       FontSize="18"
                       Foreground="Aqua"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <ComboBox Width="200"
                      Style="{StaticResource RoundedComboBoxStyle}"
                      HorizontalAlignment="Center"
                      SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                      ItemsSource="{Binding Themes}"
                      DisplayMemberPath="Display"
                      Margin="0,0,0,6"
                      SelectionChanged="ThemeComboBox_SelectionChanged"/>
            <TextBlock Text="Custom Theme"
                       FontWeight="SemiBold"
                       Foreground="LightGray"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                <Button Content="+" Click="AddTheme_Click"
                        Width="32" Height="32" Margin="2"
                        Style="{StaticResource RoundedButtonStyle}"/>
                <Button Content="-" Click="RemoveTheme_Click"
                        Width="32" Height="32" Margin="2"
                        Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
