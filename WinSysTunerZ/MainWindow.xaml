<Window x:Class="WinSysTunerZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:WinSysTunerZ.Helpers"
        Title="{Binding [AppTitle]}"
        Height="600" Width="1000">

    <Window.DataContext>
        <Binding Source="{x:Static helpers:ResourceProvider.Instance}"/>
    </Window.DataContext>

    <Border Background="{DynamicResource BackgroundBrush}" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TopBar -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBrush}">
                <DockPanel>
                    <TextBlock Text="{Binding [AppTitle]}"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               Foreground="White"
                               FontWeight="Bold"/>
                </DockPanel>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="{DynamicResource SidebarBrush}">
                    <StackPanel>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [Registry]}"
                                Click="Nav_Registry"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [CmdTools]}"
                                Click="Nav_Cmd"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [Cleaner]}"
                                Click="Nav_Cleaner"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [Backup]}"
                                Click="Nav_Backup"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [Hardware]}"
                                Click="Nav_Hardware"/>
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="{Binding [Settings]}"
                                Click="Nav_Settings"/>
                    </StackPanel>
                </Border>

                <!-- Pages -->
                <Frame x:Name="MainFrame" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>
